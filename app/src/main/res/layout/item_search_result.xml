<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:id="@+id/search_result_song_cv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
>
	<RelativeLayout android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:padding="5dp">
		<TextView
			android:id="@+id/search_result_song_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Song name" android:textSize="25sp"/>
		<TextView
			android:id="@+id/search_result_song_artist"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:layout_below="@+id/search_result_song_name"
			android:text="artist"
			android:textSize="20sp"/>

		<ImageView
			android:id="@+id/search_result_song_type"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginRight="10dp"
			android:layout_toLeftOf="@+id/search_result_song_download"
			android:src="@drawable/ic_music_video_black_24dp"/>
		<com.huylv.uniplayer.animation.ImageViewWithAnim
			android:id="@+id/search_result_song_download"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="10dp"
			android:src="@drawable/ic_file_download_black_24dp"/>
	</RelativeLayout>
</android.support.v7.widget.CardView>